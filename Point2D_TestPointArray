//Assignment4_B
package Tester;

import java.util.Scanner;
import com.app.geometry.Point2D;
public class Point2D_TestPointArray {
	public static int menuList() {
		Scanner sc = new Scanner(System.in);
		int choice;
		System.out.println("MenuList : ");
		System.out.println("1.Display details of a specific point");
		System.out.println("2.Display x, y co-ordinates of all points");
		System.out.println("3.0validate the indices");
		System.out.println("4. Exit");
		System.out.println("Enter your choice : ");
		choice = sc.nextInt();
		return choice;
		
	}
	public static void main(String[] args) {
		System.out.println("Enter the number od points : ");
		Scanner sc = new Scanner(System.in);
		int num = sc.nextInt();
		
		Point2D[] points =new Point2D[num];
		
		for(int i=0;i<points.length;i++) {
			System.out.println("Enter points co-ordinates : ");
			double x = sc.nextDouble();
			double y = sc.nextDouble();
			points[i] = new Point2D(x,y);
		}
		
		int choice;
		while((choice = menuList())!=0) {
			switch(choice) {
				case 1 :{
					System.out.println("Enter the index of point : ");
					int index = sc.nextInt();
					if(index < points.length) {
						points[index].getDetails();
					}
					else {
						System.out.println("Invalid index , pls retry!!!!");
					}
					break;
				}
				case 2 :{
					for(int i=0;i<points.length;i++) {
						System.out.println("Co-ordinates of point at " + i  + " index " + " : ");
						points[i].getDetails();
					}
					break;
				}
				case 3:{
					System.out.println("Enter start index : ");
					int startIndex = sc.nextInt();
					
					System.out.println("Enter end index : ");
					int endIndex = sc.nextInt();
					
					if(points[startIndex].equals(points[endIndex])) {
						System.out.println("Points are same");
					}
					else {
						System.out.println("Points are different");
						double distance = points[startIndex].calculateDistance(points[endIndex]);
						System.out.println("Distance : " + distance);
					}
					break;
				}
				case 4:{
					System.out.println("Exit...!!!");
					break;
				}
				default :{
					System.out.println("Invalid choice!!!!");
				}
				
			}
		}
	}
}
